# Private key for deployment (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Treasury address for receiving platform fees
TREASURY_ADDRESS=0x1234567890123456789012345678901234567890

# Token addresses (will be deployed if not provided)
USDC_ADDRESS=
BOUNTY_TOKEN_ADDRESS=

# BountyEscrow configuration
PLATFORM_FEE_PERCENT=250  # 2.5% in basis points
DISPUTE_WINDOW=604800      # 7 days in seconds

# Token deployment configuration
BOUNTY_TOKEN_INITIAL_SUPPLY=100000000000000000000000000  # 100M tokens (18 decimals)
USDC_INITIAL_SUPPLY=1000000000000  # 1M USDC (6 decimals)

# Additional dispute resolvers (comma-separated addresses)
DISPUTE_RESOLVERS=

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Network configuration
RPC_URL=https://k8s.testnet.json-rpc.injective.network/
CHAIN_ID=1439